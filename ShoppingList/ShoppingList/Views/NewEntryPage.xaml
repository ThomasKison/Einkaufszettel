<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.NewEntryPage" Title="Neuer Eintrag">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Speichern" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableView.Root>
                <TableSection>
                    <EntryCell Label="Artikel" />
                    <EntryCell Label="Anzahl" Keyboard="Numeric" Text="1" />
                    <EntryCell Label="Einheit" Text="Stck" />
                    <EntryCell Label="Preis" Keyboard="Numeric" />
                </TableSection>
            </TableView.Root>
        </TableView>
    </ContentPage.Content>
</ContentPage>